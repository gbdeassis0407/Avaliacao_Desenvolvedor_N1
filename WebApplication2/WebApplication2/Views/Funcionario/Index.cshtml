@*INDEX FUNCIONARIOS*@
@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Funcionarios";
}

<div class="text-center">

    @*Titulo*@
    <h2 class="display-4"> Funcionarios </h2>
    <br />

    @*Botão Cadastro*@
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-outline-success" asp-controller="Funcionario" asp-action="Cadastrar">Cadastrar Funcionario</a>
    </div>

    <br />

    @*Janela de Notificação*@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    @*Tabela de registro de Funcionarios*@
    <table class="table" id="table-funcionarios">
        <thead>
            @*Lista de Dados Funcionarios*@
            <tr>
                <th scope="col">#</th>          @*ID*@
                <th scope="col">Matricula</th>  @*Matricula*@
                <th scope="col">CPF</th>        @*CPF*@
                <th scope="col">Nome</th>       @*Nome*@
                <th scope="col">Cargo</th>      @*Cargo*@
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>       
            @*Função para Exibicao de diversos Funcionarios*@
            @if(Model != null && Model.Any())
            {
                foreach (FuncionarioModel funcionario in Model)
                {
                    <tr>
                        <th scope="row">@funcionario.Id</th>
                        <td>@funcionario.Matricula</td>
                        <td>@funcionario.CPF</td>
                        <td>@funcionario.Nome</td>
                        <td>@funcionario.Cargo</td>
                        <td>
                            @*Botoes Alterar e Excluir*@
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="Alterar"> Alterar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="DeletarConfirmacao"> Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@*INDEX FUNCIONARIOS*@


